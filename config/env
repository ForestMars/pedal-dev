# Controls whether ReviewEngine should aggressively filter out files 
# with high change counts (to manage LLM token limits).
# Set to 'yes' to enable strict filtering.
FILTER_LARGE_FILES=yes

# Models 
## pr-reiview
PR_REVIEW_MODEL=qwen2.5-coder:7b

# Prompts
## Path to prompt file for each agent (relative to project root)
# PR_REVIEW_PROMPT=config/prompts/pr-review.md
PR_REVIEW_PROMPT=config/prompts/pr-agent.md

# Review Strategy
PR_REVIEW_MULTIPASS=false
PR_REVIEW_PASSES=3  # Number of passes if multipass enabled
PR_REVIEW_TEMPERATURE=0.3
PR_REVIEW_MERGE_STRATEGY=union  # union (all findings) | intersection (only if found multiple times) | majority (found in >50% of passes)

# This keeps aider happy
export OLLAMA_API_BASE=http://127.0.0.1:11434

